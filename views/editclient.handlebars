<h3 class="page-header">Client To Be Updated</h3>
<img id="update-client-img" src="{{logo}}" alt="{{name}} logo" style="width: 100px; height: 100px;">
<h2 id="update-client-name">{{name}}</h2>
<form method="put" id="js-client-update-form">
	<div class="form-group">
		<label>Client ID</label>
		<input type="text" class="form-control" id="js-client-to-update" value="{{id}}" readonly>
		<label>Update Name</label>
		<input type="text" class="form-control" placeholder="Name" id="js-update-name" name="updatedName" value="{{name}}">
		<label>Update Logo</label>
		<input type="text" class="form-control" placeholder="Logo" id="js-update-logo" name="updatedLogo" value="{{logo}}">
		<div class="update-video-group">
		{{#each videos}}
			<label>Update Video</label>
			<input type="text" class="form-control" placeholder="Enter Video Url" value="{{this}}" name="updatedVideos[]">
		{{/each}}
		</div>
	</div>
	<button type="button" class="btn btn-warning addVid-btn" id="update-add-video-btn">Add Video</button>
	<button type="submit" class="btn btn-primary update-btn">Submit</button>
</form>

<script type="text/javascript" src="/js/clientupdate.js"></script>
<script type="text/javascript" src="/js/addMoreVideos.js"></script>
