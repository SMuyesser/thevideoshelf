<h2 class="page-header">Register A New Client</h2>
{{#if errors}}
	{{#each errors}}
		<div class="alert alert-danger">
			{{msg}}
		</div>
	{{/each}}
{{/if}}
<form method="post" id="js-client-register-form" action="/users/registerclient">
	<div class="form-group">
		<label>Name</label>
		<input type="text" class="form-control" placeholder="Enter Name" id="js-clientName" name="name">
	</div>
	<div class="form-group">
		<label>Logo</label>
		<input type="text" class="form-control" placeholder="Enter Logo Url" id="js-clientLogo" name="logo">
	</div>
	<div class="form-group video-group">
		<label>Video Url</label>
		<input type="text" class="form-control" placeholder="Enter Vimeo Video Url" name="videos[]">
	</div>
	<button type="button" class="btn btn-warning" id="addMoreVideos-btn">Add More Videos</button>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>

<script type="text/javascript" src="/js/addMoreVideos.js"></script>

